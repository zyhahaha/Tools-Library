<!-- index.wxml -->
<view class="container">
    <t-tabs sticky value="{{ tabValue }}" bind:change="onTabsChange" bind:click="onTabsClick" t-class="custom-tabs" t-class-content="custom-panel">
        <t-tab-panel label="房贷计算器" value="0">
            <loans />
        </t-tab-panel>
        <t-tab-panel label="二维码" value="1">
            <qrcode wx:if="{{ tabValue === '1' }}" />
        </t-tab-panel>
        <t-tab-panel label="解析" value="2">
            <barcode wx:if="{{ tabValue === '2' }}" />
        </t-tab-panel>
    </t-tabs>
</view>